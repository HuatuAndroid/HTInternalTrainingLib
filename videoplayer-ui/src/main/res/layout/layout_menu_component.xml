<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/bjplayer_center_video_functions_ll"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="right|center_vertical"
        android:background="@color/bjplayer_controller_bg_99"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bjplayer_center_video_functions_rate_tv"
            style="@style/bjplayer_text_normal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bjplayer_video_functions_rate"
            tools:text="倍速" />

        <TextView
            android:id="@+id/bjplayer_center_video_functions_frame_tv"
            style="@style/bjplayer_text_normal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/bjplayer_video_functions_frame_normal"
            tools:text="标清" />
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bjplayer_rv_ll"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/bjplayer_controller_bg_99"
        tools:visibility="visible"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_bjplayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>


</FrameLayout>
