<resources>

    <style name="FullScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Dialog_FullScreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="bottom_menu_animation">
        <item name="android:windowEnterAnimation">@anim/bottom_menu_appear</item>
        <item name="android:windowExitAnimation">@anim/bottom_menu_disappear</item>
    </style>

    <style name="LiveTextTitle">
        <item name="android:textColor">@color/live_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="LiveBaseDialogFragment">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="LiveBaseDialogAnim">
        <item name="android:windowEnterAnimation">@anim/live_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/live_dialog_exit</item>
    </style>

    <style name="ViewBigPicAnim">
        <item name="android:windowEnterAnimation">@anim/live_dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/live_dialog_scale_out</item>
    </style>

    <style name="LiveBaseSendMsgDialogAnim">
        <item name="android:windowEnterAnimation">@anim/live_dialog_send_msg_enter</item>
        <item name="android:windowExitAnimation">@anim/live_dialog_send_msg_exit</item>
    </style>
</resources>
