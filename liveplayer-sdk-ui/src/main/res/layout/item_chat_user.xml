<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_private_chat_user"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:paddingLeft="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_chat_user_avatar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/item_chat_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_live_room_margin"
            android:layout_toRightOf="@+id/item_chat_user_avatar"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/item_chat_user_teacher_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/item_chat_user_name"
            android:background="@drawable/live_teacher_tag"
            android:padding="2dp"
            android:text="@string/live_teacher"
            android:textColor="@color/live_blue"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_chat_user_assist_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/item_chat_user_name"
            android:background="@drawable/live_teacher_tag"
            android:padding="2dp"
            android:text="@string/live_assistent"
            android:textColor="@color/live_blue"
            android:visibility="gone"
            android:textSize="10sp" />
    </RelativeLayout>
</LinearLayout>