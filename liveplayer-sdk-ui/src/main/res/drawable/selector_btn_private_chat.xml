<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_selected="false">
    <shape>
        <corners android:radius="2dp" />
        <padding
            android:bottom="6px"
            android:left="6px"
            android:right="6px"
            android:top="6px" />
        <stroke
            android:width="1px"
            android:color="@color/live_text_color_mid_light" />
    </shape>
</item>
<item android:state_selected="true">
    <shape>
        <corners android:radius="2dp" />
        <padding
            android:bottom="6px"
            android:left="6px"
            android:right="6px"
            android:top="6px" />
        <stroke
            android:width="1px"
            android:color="@color/live_blue" />
    </shape>
</item>
</selector>