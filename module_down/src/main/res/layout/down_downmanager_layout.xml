<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <com.wb.baselib.view.TopBarView
        android:id="@+id/down_top"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomLineColor="@color/linen"
        app:titleBarHeight="50dp"
        app:fillStatusBar="false"
        app:showBottomLine="true"
        app:leftType="imageButton"
        app:leftImageResource="@drawable/public_back_hs"
        app:centerType="textView"
        app:centerText="我的下载"
        app:titleBarColor="@color/white"
        app:centerTextColor="@color/black"
        />
    <Button
        android:visibility="gone"
        android:id="@+id/down_bt"
        android:text="下载"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <include layout="@layout/public_mu_listview"/>
</LinearLayout>