<RelativeLayout
    android:id="@+id/lnlyDownloadItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <CheckBox
        android:visibility="gone"
        android:buttonTint="#458bfc"
        android:layout_centerVertical="true"
        android:id="@+id/select_cx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_toRightOf="@+id/select_cx"
        android:id="@+id/down_xz_rel"
        android:layout_margin="5dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textSize="@dimen/title3"
            android:id="@+id/tvFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="UnknownUnknownUnknownUnknownUnknownUnknownUnknownUnknown"
            />
        <ProgressBar
            android:layout_below="@+id/tvFileName"
            android:id="@+id/pbProgress"
            style="@style/InitProgressBar"
            android:layout_width="fill_parent"
            android:max="100"
            android:progress="20"
            android:layout_height="5dp"
            android:layout_margin="2dp"/>
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_below="@+id/pbProgress"
            android:id="@+id/llo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDownloadSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="00.00M/"
                android:textSize="@dimen/title3"/>
            <TextView
                android:id="@+id/tvTotalSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="00.00M"
                android:textSize="@dimen/title3"/>
        </LinearLayout>
        <TextView
            android:layout_margin="2dp"
            android:layout_below="@+id/pbProgress"
            android:id="@+id/tvPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="暂停"
            android:textSize="@dimen/title3"/>
    </RelativeLayout>
</RelativeLayout>