<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/mRlView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_toLeftOf="@+id/mIvSelect">

        <ImageView
            android:id="@+id/mIvApartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="52dp"
            android:visibility="gone"
            android:src="@mipmap/first_apartment" />

        <TextView
            android:id="@+id/mTvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mIvApartment"
            android:paddingBottom="14dp"
            android:paddingLeft="6dp"
            android:paddingRight="16dp"
            android:paddingTop="14dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_414247"
            android:textSize="15sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/mIvSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:paddingTop="5dp"
        android:src="@mipmap/reserve_calendar_after_btn" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/mRlView"
        android:layout_marginLeft="15dp"
        android:background="@color/seprate_color" />

</RelativeLayout>
