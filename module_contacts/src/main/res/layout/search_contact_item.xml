<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/mRlClickEven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mCircleImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="9dp"
            android:layout_toRightOf="@+id/mIvSelect"
            android:src="@mipmap/portairt" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/mCircleImageView">

            <TextView
                android:id="@+id/mTvPersonalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/apply_tab_text_color"
                android:textSize="14sp"
                tools:text="李三" />

            <TextView
                android:id="@+id/mTvPersonalId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mTvPersonalName"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="@color/black_999CAA"
                android:textSize="12sp"
                tools:text="099999" />
        </RelativeLayout>


        <TextView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/mTvDepartmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/black_999CAA"
            android:textSize="12sp"
            tools:text="新产品研发部" />

        <TextView
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:id="@+id/mTvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mTvDepartmentName"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:text=""
            android:textColor="@color/black_999CAA"
            android:textSize="12sp"
            tools:text="www.baidu.com" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/mCircleImageView"
            android:layout_marginLeft="15dp"
            android:background="@color/seprate_color" />
    </RelativeLayout>
</RelativeLayout>
