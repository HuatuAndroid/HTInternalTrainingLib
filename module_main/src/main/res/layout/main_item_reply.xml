<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/reply_rl"
    android:padding="10dp"
    android:background="@color/main_bg_grey_f7">

    <TextView
        android:id="@+id/reply_name"
        android:textSize="12sp"
        android:textColor="@color/main_text_black_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/reply_name"
        android:layout_marginLeft="10dp"
        android:id="@+id/reply_time"
        android:textSize="12sp"
        android:textColor="@color/main_text_black_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/reply_name"
        android:id="@+id/reply_content"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="@color/main_text_66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>