<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.youth.banner.Banner
        android:id="@+id/home_banner"
        app:image_scale_type="fit_xy"
        android:background="@drawable/home_banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_course"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/main_home_course"
            android:textSize="13sp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="课程"
            android:textColor="@color/main_text_66"/>

        <TextView
            android:id="@+id/home_community"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/main_home_community"
            android:textSize="13sp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="员工天地"
            android:textColor="@color/main_text_66"/>

        <TextView
            android:id="@+id/home_library"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/main_home_library"
            android:textSize="13sp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="知识库"
            android:textColor="@color/main_text_66"/>

        <!--<TextView
            android:id="@+id/home_shop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/main_home_shop"
            android:textSize="13sp"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="商城"
            android:textColor="@color/main_text_66"/>-->


    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_bg_grey_f8"/>
</LinearLayout>