<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/online_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/main_text_black_33"
            />
        <TextView
            android:id="@+id/online_more"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/main_more"
            android:drawablePadding="5dp"
            android:textColor="@color/main_text_grey_7c"
            android:textSize="14sp"
            android:text="@string/main_more"/>

    </RelativeLayout>

    <com.wb.baselib.view.MyListView
        android:id="@+id/online_listview"
        android:divider="@null"
        android:scrollbars="none"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/online_line"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_bg_grey_f8"/>
</LinearLayout>