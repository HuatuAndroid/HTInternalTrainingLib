<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/back_left"
        android:src="@drawable/public_back_hs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <ScrollView
       android:layout_above="@+id/bt_ll"
       android:layout_below="@+id/back_left"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:layout_marginTop="20dp"
               android:id="@+id/top_img"
               android:layout_centerHorizontal="true"
               android:src="@drawable/public_des_top"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/des_tv"
               android:layout_marginTop="30dp"
               android:layout_marginBottom="10dp"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/top_img"
               android:textColor="@color/black"
               android:textSize="@dimen/title1"
               android:text="快速智能练习"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <TextView
               android:id="@+id/msg_tv"
               android:layout_margin="20dp"
               android:layout_below="@+id/des_tv"
               android:text="根据实际真题的难度、考点、分值等智能组卷，随时检测您的学习掌握情况"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/star_test_tv"
               android:layout_marginTop="40dp"
               android:textSize="@dimen/title3"
               android:paddingRight="50dp"
               android:paddingLeft="50dp"
               android:paddingTop="10dp"
               android:paddingBottom="10dp"
               android:textColor="@color/white"
               android:background="@drawable/dotest_testdes_bg"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/msg_tv"
               android:text="开始答题"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <CheckBox
               android:id="@+id/again_cbx"
               android:layout_marginTop="10dp"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/star_test_tv"
               android:text="不再提醒"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
       </RelativeLayout>
   </ScrollView>
    <ImageView
        android:id="@+id/bt_ll"
        android:scaleType="centerCrop"
        android:layout_alignParentBottom="true"
        android:src="@drawable/public_bottombackground"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
</RelativeLayout>