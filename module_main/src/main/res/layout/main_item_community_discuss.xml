<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/discuss_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_black_33"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/discuss_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discuss_title"
            android:layout_marginTop="10dp"
            android:textColor="@color/main_bg_grey_b8"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/discuss_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/discuss_title"
            android:layout_marginTop="10dp"
            android:textColor="@color/main_text_black_11"
            android:textSize="13sp" />

    </RelativeLayout>

    <!-- <TextView
         android:padding="15dp"
         android:id="@+id/discuss_content"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:maxLines="3"
         android:ellipsize="end"
         android:textSize="15sp"
         android:textColor="@color/main_text_66" />-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/discuss_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/user_head" />

        <TextView
            android:id="@+id/discuss_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/discuss_image"
            android:textColor="@color/main_text_black_33"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/discuss_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/discuss_comment"
            android:drawableLeft="@drawable/like"
            android:drawablePadding="5dp"
            android:textColor="@color/main_bg_grey_b8"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/discuss_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/discuss_read"
            android:drawableLeft="@drawable/main_home_comment"
            android:drawablePadding="5dp"
            android:textColor="@color/main_bg_grey_b8"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/discuss_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/main_home_browse"
            android:drawablePadding="5dp"
            android:textColor="@color/main_bg_grey_b8"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/main_bg_grey_f8" />
</LinearLayout>