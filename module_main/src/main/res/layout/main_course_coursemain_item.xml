<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardview"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="10dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="5dp"
    app:contentPaddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="75dp">
        <ImageView
            android:id="@+id/coursemain_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/course_image"
            android:scaleType="fitXY" />
            <ImageView
                android:id="@+id/image_type"
                android:src="@drawable/course_live_type"
                android:layout_width="31dp"
                android:layout_height="16dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coursemain_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="fdsfsdfs"
                android:textColor="@color/main_text_black_33"
                android:textSize="@dimen/title3" />

            <TextView
                android:id="@+id/coursemain_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coursemain_title"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="fdsfsdfs"
                android:textColor="@color/main_text_grey_7c"
                android:textSize="12sp" />

            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/coursemain_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="right"
                android:layout_below="@+id/coursemain_teacher"
                android:text="fdsfsdfs"
                android:textColor="@color/main_num_d2"
                android:textSize="12sp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
