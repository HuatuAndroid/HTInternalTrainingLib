<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <com.wb.baselib.view.TopBarView
        android:id="@+id/topbarview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bottomLineColor="@color/main_line_ea"
        app:centerTextColor="#333333"
        app:centerTextSize="18sp"
        app:centerType="textView"
        app:centerText="帖子详情"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/main_back"
        app:leftType="imageButton"
        app:showBottomLine="true"
        app:titleBarHeight="45dp"
        app:rightType="customView"
        app:rightCustomView="@layout/topic_right_title_layout"/>

    <View
        android:id="@+id/details_line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/topbarview"
        android:background="@color/main_line_ea" />

    <com.wangbo.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/details_rl"
        android:layout_below="@+id/details_line">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/details_head"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true" />

                    <LinearLayout
                        android:id="@+id/ll_name"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/details_head">
                        <TextView
                            android:id="@+id/details_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_text_black_33"
                            android:textSize="15sp"
                            android:text="张三"/>
                        <TextView
                            android:id="@+id/details_part"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="组织部"
                            android:layout_marginLeft="15dp"
                            android:textColor="#999CAA"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:layout_below="@+id/ll_name"
                        android:layout_toRightOf="@id/details_head">
                        <TextView
                            android:id="@+id/details_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_bg_grey_b8"
                            android:textSize="12sp"
                            android:text="2019-12-12"/>

                        <TextView
                            android:id="@+id/details_browse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_bg_grey_b8"
                            android:layout_marginLeft="7dp"
                            android:textSize="12sp"
                            android:text="l 阅读222"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_topic_group"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textSize="11sp"
                        android:textColor="@color/main_text_blue_458"
                        android:background="@drawable/shape_topic_group_bg"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:text="薪酬组"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/details_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/main_line_ea" />

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:textColor="#3D3E43"
                    android:textSize="13sp"
                    android:text="全部评论"/>

                <com.wb.baselib.view.MyListView
                    android:id="@+id/p_mlv"
                    android:scrollbars="none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/list_empty_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/empty_retry_view"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_empty"
                        />

                    <TextView
                        style="@style/MultipleStatusView.Content"
                        android:id="@+id/empty_view_tv"
                        android:layout_gravity="center_horizontal"
                        android:layout_below="@id/empty_retry_view"
                        android:text="@string/empty_view_hint"/>
                </LinearLayout>

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.wangbo.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@color/main_line_ea"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/details_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/topic_detail_message"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="评论"
                        android:textColor="#999CAA"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/main_line_ea"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <LinearLayout
                    android:id="@+id/details_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/details_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/topic_detail_zan1" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="赞"
                        android:textColor="#999CAA"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>