<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/xx_view"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/course_name_tv"
            android:textSize="@dimen/title3"
            android:textColor="@color/black"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/qhs"
            android:id="@+id/course_start_tv"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/title5"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/qhs"
            android:id="@+id/course_end_tv"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/title5"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/course_teachername_tv"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/title4"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/course_bmname_tv"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/title4"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/course_ybm_tv"
                android:textColor="@color/black"
                android:textSize="@dimen/title4"
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/qhs"
                android:id="@+id/course_sy_tv"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/title4"
                android:text="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/zx_view"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/course1_name_tv"
            android:textSize="@dimen/title3"
            android:textColor="@color/black"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/qhs"
            android:id="@+id/course1_ll_tv"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/title5"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/course1_zjr_tv"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/title5"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/qhs"
            android:id="@+id/course1_jj_tv"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/title5"
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>