<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#EEEFF4"/>

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3D3E43"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/details_head"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@drawable/morentouxiang"/>

        <LinearLayout
            android:id="@+id/ll_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/details_head">
            <TextView
                android:id="@+id/details_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3D3E43"
                android:textSize="15sp"
                android:text="张三"/>
            <TextView
                android:id="@+id/details_part"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="组织部"
                android:layout_marginLeft="15dp"
                android:textColor="#999CAA"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/ll_name"
            android:layout_toRightOf="@id/details_head">
            <TextView
                android:id="@+id/details_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999CAA"
                android:textSize="12sp"
                android:text="2019-12-12"/>

            <TextView
                android:id="@+id/details_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999CAA"
                android:layout_marginLeft="7dp"
                android:textSize="12sp"
                android:text="l 阅读222"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_topic_group"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textSize="12sp"
            android:textColor="#007AFF"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:text="【薪酬组】"/>

    </RelativeLayout>

    <!--帖子详情  展开-->
    <LinearLayout
        android:id="@+id/ll_dev_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:visibility="visible">
        <RelativeLayout
            android:id="@+id/rl_details_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tv_details_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="5dp"
                android:maxLines="5"
                android:ellipsize="end"
                android:text=""/>
            <TextView
                android:id="@+id/tv_details_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_details_text"
                android:textSize="14sp"
                android:textColor="#007AFF"
                android:text="展开"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
    <!--帖子详情  收起-->
    <LinearLayout
        android:id="@+id/ll_dev_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="22dp"
        android:visibility="gone">
        <TextView
            android:id="@+id/tv_detail_html"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp" />
        <TextView
            android:id="@+id/tv_details_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="14sp"
            android:textColor="#007AFF"
            android:text="收起"/>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#EEEFF4"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:textColor="#3D3E43"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="全部评论 10"/>

</LinearLayout>