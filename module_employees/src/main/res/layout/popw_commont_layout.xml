<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="124dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textColor="#3D3E43"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/shape_left_right_popw_bg"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFDADADD"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_canael"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_bottom_left_popw_bg"
                android:textSize="15sp"
                android:textColor="#999CAA"
                android:gravity="center"
                android:text="取消"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFDADADD"/>
            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#3D3E43"
                android:gravity="center"
                android:background="@drawable/shape_bottom_right_popw_bg"
                android:text="确定"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>