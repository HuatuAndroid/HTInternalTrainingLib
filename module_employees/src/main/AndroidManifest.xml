            android:theme="@style/BaseAppTheme.Transparent"
            android:configChanges="orientation|keyboardHidden|locale|layoutDirection"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.group.GroupDetailsActivity"
            android:theme="@style/BaseAppTheme.Transparent"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.group.MyItemActivity"
            android:theme="@style/BaseAppTheme.Transparent"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.EditPostsActivity"
            android:configChanges="orientation|keyboardHidden|locale|layoutDirection"
            android:theme="@style/BaseAppTheme.Transparent"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"/>

        <provider
            android:name=".utils.MProvider"
            android:authorities="com.example.module_employees_world.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths"/>
        </provider>

    </application>

</manifest>