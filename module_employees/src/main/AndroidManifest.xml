<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.module_employees_world">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FLAG_GRANT_READ_URI_PERMISSION" />
    <uses-permission android:name="android.permission.FLAG_GRANT_WRITE_URI_PERMISSION" />
    <uses-permission android:name="android.permission.CAMERA" />
    
    <application android:theme="@style/BaseAppTheme">
        <activity android:name=".GuideH5Activity" />
        <activity android:name=".ui.PictuirePreviewActivity" />
        <activity android:name=".ui.search.SearchActivity" />
        <activity android:name=".ui.GuideActivity" /> <!-- <activity android:name=".ui.home.EmplayeesActivity" /> -->
        <activity
            android:name=".ui.PostsDetailActivity"
            android:theme="@style/BaseAppTheme.Transparent"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CommentDialogActivity"
            android:theme="@style/BaseAppTheme.Transparent"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name=".ui.home.CommunityActivity"
            android:theme="@style/BaseAppTheme.Transparent"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.CommentDetailctivity"
            android:theme="@style/BaseAppTheme.Transparent"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.topic.TopicEditActivity"
            android:configChanges="orientation|keyboardHidden|locale|layoutDirection"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.topic.NTopicEditActivity"
            android:theme="@style/BaseAppTheme.Transparent"
            android:configChanges="orientation|keyboardHidden|locale|layoutDirection"
            android:launchMode="singleTop"
